{
  "repository": {
    "remote": "https://github.com/codingchili/chili-core.git",
    "branch": "master",
    "commit": "<last-synced>",
    "poll": 15000
  },
  "deploy": {
    "await": {
      "replication": true
    },
    "notification": {
      "event": "cluster.deploy"
    },
    "paths": [
      {
        "os": "linux",
        "path": "/opt/chili"
      },
      {
        "os": "windows",
        "path": "c:\\chili\\"
      }
    ],
    "hosts": [
      {
        "remote": "deploytool@localhost",
        "os": "linux",
        "services": [
          {
            "service": "com.codingchili.core.Routing"
          },
          {
            "service": "com.codingchili.core.Authentication"
          },
          {
            "service": "com.codingchili.core.Patching"
          },
          {
            "service": "com.codingchili.core.Website"
          },
          {
            "service": "com.codingchili.core.Logging"
          },
          {
            "service": "com.codingchili.core.Realm",
            "realms": [
              {
                "realm": "Angel Oak",
                "instances": [
                  "level 1",
                  "level 2",
                  "level 3"
                ]
              }
            ]
          }
        ],
        "authentication": {
          "username": "root",
          "password": "root",
          "certificate": "root.key",
          "passphrase": "optional"
        }
      }
    ]
  }
}

